{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/src/myVideos/myVideos.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Check and Start Azurite",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-ExecutionPolicy", "Bypass",
				"-File", "${workspaceFolder}/scripts/start-azurite.ps1",
				"-WorkspaceFolder", "${workspaceFolder}"
			],
			"group": "build",
			"dependsOn": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Start Azurite Storage Emulator",
			"type": "shell",
			"command": "npx",
			"args": [
				"azurite@latest",
				"--silent",
				"--location",
				"${workspaceFolder}/.azurite",
				"--debug",
				"${workspaceFolder}/.azurite/debug.log",
				"--skipApiVersionCheck"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*$",
					"endsPattern": "^.*$"
				}
			},
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}